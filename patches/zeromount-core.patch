+static char *zeromount_normalize_path(const char *path)
+{
+    char *normalized;
+    size_t len;
+    const char *p = path;
+
+    if (!path)
+        return NULL;
+
+    // Android mounts system at both / and /system
+    if (strncmp(path, "/system/", 8) == 0)
+        p = path + 7;
+
+    len = strlen(p);
+
+    while (len > 1 && p[len - 1] == '/')
+        len--;
+
+    normalized = kmalloc(len + 1, GFP_KERNEL);
+    if (!normalized)
+        return NULL;
+
+    memcpy(normalized, p, len);
+    normalized[len] = '\0';
+
+    return normalized;
+}
