+static void zeromount_flush_dcache(const char *path_name)
+{
+	struct path path;
+	int err;
+
+	zm_enter();
+	err = kern_path(path_name, LOOKUP_FOLLOW, &path);
+	if (!err) {
+		d_invalidate(path.dentry);
+		d_drop(path.dentry);
+		path_put(&path);
+	} else if (err == -ENOENT) {
+		zeromount_flush_parent(path_name);
+	}
+	zm_exit();
+}
